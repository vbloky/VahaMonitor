<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui"
        xmlns:vm="clr-namespace:VahaMonitor.ViewModels"
		xmlns:views="clr-namespace:VahaMonitor.Views"
        x:Class="VahaMonitor.Views.MainWnd"
        Width="400" Height="200"
        Title="Váha Monitor">

	<!-- toto potřebuje bezparametrový konstruktor, proto inicializace na pozadí -->
	<!--<Window.DataContext>
		<vm:MainVM />
	</Window.DataContext>-->

	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock
				Text="{Binding CurrentWeight, StringFormat=F2}"
				FontSize="48"
				FontFamily="Consolas"
				TextAlignment="Right"
				MinWidth="220"
        />
			<TextBlock
				Text="kg"
				FontSize="48"
				Margin="8,0,0,0"
        />
		</StackPanel>

		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Šířka x Výška: "/>
			<TextBlock Text="{Binding Bounds.Size.Width, ElementName=border}" />
			<TextBlock Text=" x "/>
			<TextBlock Text="{Binding Bounds.Size.Height, ElementName=border}"/>
		</StackPanel>
		<Border x:Name="border" BorderBrush="Orange" BorderThickness="1">
			<views:WeightGraphUC/>
		</Border>
		
	</StackPanel>
</Window>
